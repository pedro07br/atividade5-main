<!-- activity_cifra.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText android:id="@+id/inputTexto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Digite o texto" />

    <EditText android:id="@+id/inputChave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Chave (nÃºmero)"
        android:inputType="number" />

    <Button android:id="@+id/btnCodificar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Codificar" />

    <Button android:id="@+id/btnDecodificar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Decodificar" />

    <TextView android:id="@+id/txtResultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold" />
</LinearLayout>
