<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.aplicativo05">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Aplicativo05"
        tools:targetApi="31">

        <!-- Activity Principal -->
        <activity android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Demais Telas -->
        <activity android:name=".MenuActivity" />
        <activity android:name=".CifraActivity" />
        <activity android:name=".JogoPPTActivity" />
        <activity android:name=".CodigoSecretoActivity" />
        <activity android:name=".RandomizadorActivity" />
        <activity android:name=".ResultadoJogoActivity" />
        <activity android:name=".VitoriaActivity" />
    </application>

</manifest>
